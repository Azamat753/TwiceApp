<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_marginTop="@dimen/fourteen"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:layout_marginStart="@dimen/twelve"
        android:id="@+id/rv_album_img"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/twicealbum1"
        android:layout_width="@dimen/one_hundred_twenty"
        android:layout_height="@dimen/one_hundred_twenty_two"/>

    <TextView
        android:id="@+id/rv_album_name"
        android:background="@color/gray"
        android:gravity="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="@dimen/twenty_four_sp"
        app:layout_constraintEnd_toEndOf="@id/rv_album_img"
        app:layout_constraintTop_toBottomOf="@id/rv_album_img"
        app:layout_constraintStart_toStartOf="@id/rv_album_img"
        tools:text="@string/likey"
        android:layout_width="@dimen/zero"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txt_price"
        android:layout_marginStart="@dimen/thirty_two"
        android:text="@string/price"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/rv_album_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:textSize="@dimen/sixteen_sp"
        android:layout_marginTop="@dimen/four"
        android:textStyle="bold"
        android:textColor="@color/black"
        tools:text="3500 com"
        app:layout_constraintTop_toBottomOf="@id/txt_price"
        app:layout_constraintStart_toStartOf="@id/txt_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/img_plus"
        android:src="@drawable/ic_baseline_add_24"
        android:background="@color/orange"
        android:layout_marginStart="@dimen/thirty_two"
        app:layout_constraintStart_toEndOf="@id/rv_album_name"
        app:layout_constraintBottom_toBottomOf="@id/rv_album_name"
        android:layout_width="@dimen/forty_eight"
        android:layout_height="@dimen/thirty_two"/>

    <ImageView
        android:id="@+id/img_minus"
        android:src="@drawable/ic_baseline_horizontal_rule_24"
        android:layout_marginEnd="@dimen/seventy_two"
        app:layout_constraintBottom_toBottomOf="@id/rv_album_name"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/orange"
        android:layout_width="@dimen/forty_eight"
        android:layout_height="@dimen/thirty_two"/>

    <TextView
        android:id="@+id/txt_amount"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="@dimen/sixteen_sp"
        app:layout_constraintBottom_toBottomOf="@id/img_minus"
        app:layout_constraintTop_toTopOf="@id/img_minus"
        app:layout_constraintEnd_toStartOf="@id/img_minus"
        app:layout_constraintStart_toEndOf="@id/img_plus"
        tools:text="@string/zero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:background="@color/gray"
        android:layout_marginTop="@dimen/fourteen"
        app:layout_constraintTop_toBottomOf="@id/img_minus"
        android:layout_width="match_parent"
        android:layout_height="@dimen/two"/>


</androidx.constraintlayout.widget.ConstraintLayout>